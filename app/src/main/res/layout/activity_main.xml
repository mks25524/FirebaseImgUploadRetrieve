<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mks.firebaseimguploadretrieve.MainActivity">

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Browse images to upload"
         android:onClick="btnBrowse_click"/>
    <ImageView
        android:layout_width="1000dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:id="@+id/imgViewUpload"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Image Name"
        android:id="@+id/etImageName"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload images"
        android:onClick="btnUpload_click"/>

</LinearLayout>
